<div class="d-flex">
  <%= form_tag("/friendships", method: "post", remote: true) do %>
    <%= hidden_field_tag :friend_id, r.sender.id %>
    <%= submit_tag("Accept request", class: 'btn btn-sm button blue-button mr-1') %>
  <% end %>

  <%= form_tag("/requests/#{r.id}", method: "delete", remote: true) do %>
    <%= submit_tag("Reject request", class: 'btn btn-sm button blue-button red-hover') %>
  <% end %>
</div>